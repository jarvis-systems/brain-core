{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "client": {
      "type": "string",
      "enum": ["claude", "codex", "gemini", "qwen", "lm-studio", "openrouter", "groq", "opencode"]
    },
    "params": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "yolo": {
          "type": "boolean"
        },
        "json": {
          "type": "boolean"
        },
        "serialize": {
          "type": "boolean"
        },
        "system": {
          "type": "string"
        },
        "systemAppend": {
          "type": "string"
        },
        "schema": {
          "type": "object"
        },
        "dump": {
          "type": "boolean"
        },
        "resume": {
          "type": "string"
        },
        "continue": {
          "type": "boolean"
        },
        "noMcp": {
          "type": "boolean"
        },
        "prompt": {
          "type": "string"
        },
        "\\$_default_client": {
          "type": "string"
        }
      },
      "additionalProperties": true,
      "required": []
    },
    "name": {
      "type": "string"
    },
    "args": {
      "type": "array"
    },
    "description": {
      "type": "string"
    },
    "env": {
      "type": "object"
    }
  },
  "required": ["client"]
}
